

command /fly:
	trigger:
		if player does not have permission "fly.anywhere":
			if player's world is not "IdleGens":
				send "%{clr::error}%You only fly in plot worlds!"
				stop

		if player's flight mode is true:
			set player's flight mode to false 
			send "%title()% %{clr::white}%You have stopped flying"
		else:
			set player's flight mode to true
			send "%title()% %{clr::white}%You are now flying"
		play sound "block.lever.click" with pitch 2



command /flyspeed [<number>]:
	permission: command.flyspeed
	trigger:
		if arg-1 is not set:
			set player's fly speed to 0.1
		else if arg-1 is between 1 and 10:
			set {_num} to thisNumber(arg-1)
			set player's fly speed to ({_num} / 10)
			send formatted "%title()% %{clr::white}%Flight speed has been set to %arg-1%"
			play sound "block.lever.click" with pitch 2			
		else:
			send formatted "%{clr::error}%Flyspeed can only be between 1 and 10"

