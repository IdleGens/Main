command /nick [<string>]:
	permission: command.nick
	trigger:
		if arg-1 is not set:
			reset player's display name
			send formatted "%title()% %{clr::white}%Reset Nickname"
			play sound "block.lever.click" with pitch 2
		else:
			if player has permission "command.nick.color":
				set {_nick} to colored arg-1
			else:
				set {_nick} to uncolored arg-1
			set player's display name to "%{_nick}%" 
			send formatted "%title()% %{clr::white}%Set nickname to ""%{_nick}%"" "
			play sound "block.lever.click" with pitch 2

on world change:
	if player does not have permission "fly.anywhere":
		set player's flight mode to false

on teleport:
	if player does not have permission "fly.anywhere":
		set player's flight mode to false



command /givetoken <player> <number>:
	permission: *
	trigger:
		add arg-2 to {-data::%arg-1's uuid%::crystal}

command /givecrate <player> <string>:
	permission: *
	trigger:
		give arg-1 {crates::%arg-2%::key}

command /givesellwand <player> <number>:
	permission: *
	trigger:
		give arg-1 getSellWand(arg-2, 0)

on damage: 
	cancel event

on death:
	cancel event


on rightclick:
	entity is citizen
	name of entity is "start"
	make player execute "/start"

command /start:
	trigger:
		if {-data::%player's uuid%::start} is not set:
			set {-data::%player's uuid%::start} to true
			execute console command "/tg give dirt %player%"
			execute console command "/tg give dirt %player%"
			execute console command "/tg give dirt %player%"
			execute console command "/tg give dirt %player%"
			execute console command "/tg give dirt %player%"
			give player unbreakable iron hoe
			give player 2 of water bucket
			give player 5 of {farming::items::wheat::seed}
			give player miningPickaxe(nbt compound from "{Pickaxe:{tier:1,fortune:1}}")
			make player execute "/plot auto"